<!DOCTYPE html>
<html lang="en">
<head>
	<% var username = username; var user = user; var allEvents = allEvents %>
	<% include ./partials/head %>
</head>
<body class="container">

	<header>
		<% include ./partials/flash %>
		<% include ./partials/header %>
	</header>

	<main>
		<div class="row">
			<div class="col-sm-8">

				<div class="jumbotron">
					<h1>Upcoming CS Events</h1>

					<% for(var i=0; i < allEvents.length; i++) { %>

						<h3><%= allEvents[i].name %></h3>
						<p><%=getDateTimeStr(allEvents[i].startTime)%>
						<br><%=getDateTimeStr(allEvents[i].endTime)%>
						<br><%= allEvents[i].location %></p>

						<% if (user && user.roles.type.admin || user.roles.type.superuser) { %>
							<button id=<%= "edit-" + allEvents[i]._id %> class="btn btn-default" onclick="location.href='/event/<%= allEvents[i]._id %>/edit'">Edit Event</button>
						<% } %>

					<% } %>

				</div>

			</div>
			<div class="col-sm-4">

				<div class="well">
					<h3>Look I'm A Sidebar!</h3>
				</div>

			</div>
		</div>
	</main>

	<footer>
		<% include ./partials/footer %>
	</footer>

</body>
</html>
